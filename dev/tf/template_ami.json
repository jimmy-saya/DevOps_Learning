{
    "builders": [
      {
        "type": "amazon-ebs",
        "profile": "terraform-user",
        "region": "eu-west-1",
        "security_group_id":"sg-0215c56d4e9183d0e",
        "ssh_keypair_name":"ubuntu_desktop",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "packer-docker {{timestamp}}"
      }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "./docker_install.sh"
        },

        {
          "type": "shell",
          "inline": ["sudo git clone https://github.com/jimmy-saya/DevOps_Learning.git"]
        },

        {
          "type": "shell",
          "inline": ["cd ~/DevOps_Learning/dev/docker", "sudo docker pull node:latest", "sudo docker build -t jimmy/node-web-app ."]
        }
    ]
  }
  